<view>
  <swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="{{index}}">
      <swiper-item>
        <image src="{{item}}" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <view wx:for="{{postList}}" wx:key="{{item.postId}}" class='post-container'>
    <view class='post-author-date'>
      <image src='{{item.avatar}}'></image>
      <text class='post-date'>{{item.date}}</text>
    </view>
    <text class='post-title'>{{item.title}}</text>
    <image class='post-image' src='{{item.postImg}}' mode='scaleToFill'></image>
    <text class='post-content'>{{item.content}}</text>
    <view class='post-like'>
      <image src='/images/icon/wx_app_collect.png'></image>
      <text>{{item.collectionNum}}</text>
      <image src='/images/icon/wx_app_view.png'></image>
      <text>{{item.readingNum}}</text>
      <image src='/images/icon/wx_app_message.png'></image>
      <text>{{item.commentNum}}</text>
    </view>
  </view>
</view>